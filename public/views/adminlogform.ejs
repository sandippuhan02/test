    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <style>
      *{
        padding:0;
        margin:0;
      }
      section{
        height:100vh;
        width:100vw;
       
        position:relative;
      }
      section::before{
        content:"";
        position:absolute;
        top:0;
        left:0;
        background: url(../images/admin.jpg) no-repeat;
        background-position: center-center;
        background-size: cover;
        height:100%;
        width:100%;
        z-index:-1;
        opacity:0.8;
       
      }
        h1{
            text-align: center;
            padding-top: 2%;
            color:white;
        
        }
         #lform{
            display:flex;
            align-items: center;
            /* justify-content: center; */
            /* border :2px solid black; */
            /* box-shadow: inset;*/
             padding:3%;
            /* width:400px; */
            margin:8% 37%; 
          

        } 
        #lform > form{
          width:300px;
          
          
        } 
        #lform > form > .items label{
         color:white;
         font-weight: bold;
         font-size:1.2rem;
         
        } 
        #lform > form > .items input{
         background-color:rgb(0, 0, 0,0.5);
         
         
        } 
        
      .xyz{
          background-color: rgb(104, 104, 213);
          color:white;
          padding:4px 22px;
          margin:8% 30%;
          border-radius: 5px;
          
        }
        .xyz:hover{
          background-color: rgb(104, 104, 213);
          color:white;
        }
      
      
      
       
        
      
    </style>
</head>
<body>
    <section id="login">
        <h1>Admin login form</h1>
        <div id="lform">
            <form action="/adminlog" method="post">

                <div class="items">
                  <label for="exampleInputEmail1" class="form-label">Name</label><br>
                  <input type="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="ainputname">  
                </div>

                <div class="items">
                  <label for="exampleInputPassword1" class="form-label">Password</label><br>
                  <input type="apassword"  name="apass" class="form-control" id="exampleInputPassword1">
                </div>

                
                <button type="submit" class="xyz">Sign In</button>

              </form>
            
        </div>
    </section>
    
</body>
</html>